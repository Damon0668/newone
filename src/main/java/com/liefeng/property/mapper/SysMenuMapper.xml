<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liefeng.property.repository.mybatis.SysMenuQueryRepository" > 
    
<resultMap id="BaseResultMap" type="com.liefeng.property.vo.sys.SysMenuVo" >
    <result column="id" property="id"/>
    <result column="parent_id" property="parentId"/>
    <result column="type" property="type"/>
    <result column="name" property="name"/>
    <result column="code" property="code"/>
    <result column="url" property="url"/>
    <result column="icon" property="icon"/>
    <result column="ord" property="order"/>
    <result column="description" property="desc"/>
    <result column="oem_code" property="oemCode"/>
</resultMap>
    
    <select id="queryButtonsCodeByUserId"  resultType="java.lang.String" parameterType="java.lang.String">
        SELECT
		    distinct sm.code
		FROM
		    t_sys_menu sm
		LEFT JOIN t_sys_role_menu srm ON sm.id = srm.menu_id
		WHERE
		    1=1 
		    AND sm.type = 2 
		    AND sm.code != ''
		    AND srm.role_id IN (
		        SELECT
		            role_id
		        FROM
		            t_sys_role_user sru
		        WHERE
		            sru.user_id = #{userId}
		    )
    </select>
    
    <select id="queryMenusByUserId" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
            distinct sm.*
        FROM
            t_sys_menu sm
        LEFT JOIN t_sys_role_menu srm ON sm.id = srm.menu_id
        WHERE
            1=1 
            AND sm.type != 2 
            AND srm.role_id IN (
                SELECT
                    role_id
                FROM
                    t_sys_role_user sru
                WHERE
                    sru.user_id = #{userId}
            )
            order by sm.parent_id,sm.ord
    </select>
    
</mapper>
